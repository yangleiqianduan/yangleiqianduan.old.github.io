@import "common.styl"


.list
  padding 10px
  height 475px
  overflow-x auto
  margin-bottom -40px
  margin-top 50px
  .imgBox
    position: absolute;
    top: 98px;
    right: 0;
    width: 100%;
    height: 80px;
    display flex
    img
      overflow hidden
      box-shadow: 1px 6px 10px rgba(0,0,0,0.1);
      border: 2px solid rgba(255,255,255,0.3);
      border-radius: 50%;
      margin: auto;
  .oneImg
    width: 110px;
    height: 70px;
  .twoImg1
    width: 70px;
    height: 60px;
    position: relative;
    left: 25px;
  .twoImg0
    width: 70px;
    height: 60px;
    position: relative;
    left: -25px;
  ul
    display flex
    li
      padding-right 35px
      margin 0 20px 20px 0
      height 200px
      display inline-block
      border-radius 10px
      box-shadow 6px 7px 5px rgba(0,0,0,0.1)
      position relative
      .tags
        position: absolute;
        bottom: 10px;
        right: 10px;
        line-height: 13px;
        font-size: 12px;
        text-align: right;
        text-shadow: 2px 2px 3px rgba(0, 0, 0, 0.3);
        color: rgba(229, 229, 229, 0.83);
      a
        position relative
        z-index 200
        white-space nowrap
        display block
        height 200px
        line-height 180px
        color #696464
        font-size 20px
        &:hover
          font-size 25px
      .hasImg
        line-height  115px
