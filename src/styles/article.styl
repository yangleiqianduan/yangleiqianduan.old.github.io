@import "common.styl"

.article
  line-height 40px
  font-size 15px
  padding-top 30px
  min-height 480px
  h1
    font-size 30px
    text-align center
    font-weight 700
  h2
    font-size 26px
    font-weight 700
    text-indent 0
    color #a77474
  h3
    font-size 22px
    font-weight 700
    text-indent 0
    color #7caba8
  h4
    font-size 18px
    text-indent 0
  ul
    text-indent: 0;
    margin-left 60px;
    color: #999;
    li::before
      counter-increment count
      content '*'
      color rgba(153, 153, 153, 0.69)
  pre
    background: rgba(185, 180, 180, 0.2);
    border-radius: 10px;
    text-indent 0
    padding 0 20px
    margin-bottom: 5px;
  img
    display block
    margin 0 auto
    max-width 100%
.before
  position fixed
  left -10px
  top 50%
  >span
    position: absolute;
    top: 100%;
    left: 20px;
    font-size: 12px;
    color: #999;
    margin-top: 5px;
    text-indent 0
    width: 80px;
    text-align center

.next
  position fixed
  right 40px
  top 50%
  >span
    position: absolute;
    width: 80px;
    top: 100%;
    right: -17px;
    font-size: 12px;
    color: #999;
    margin-top: 5px;
    text-indent: 0;
    text-align center
