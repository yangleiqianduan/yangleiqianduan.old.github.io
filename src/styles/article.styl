@import "common.styl"

.article
  line-height 40px
  font-size 15px
  padding-top 30px
  img
    display block
    margin 0 auto
    max-width 100%
.last
  width 50px
  height 50px
  background url('./icon.png')
  background-size 100px 50px
  background-position-x 0px
  position fixed
  left 10px
  top 50%
.next
  width 50px
  height 50px
  background url('./icon.png')
  background-size 100px 50px
  background-position-x -50px
  position fixed
  right 20px
  top 50%