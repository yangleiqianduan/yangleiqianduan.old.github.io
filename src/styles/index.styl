@import "common.styl"

.root
  width 100%
  height 100%
  .top
    position absolute
    top 0
    left 0
    width 100%
    height 265px
    .topImg
      position absolute
      top 0
      left 50%
      transform translateX(-50%)
      width 1350px
      height 265px
      background url('./top.jpg')
  .bottom
    position absolute
    bottom 0
    left 0
    width 100%
    height 196px
    .bottomImg
      position absolute
      top 0
      left 50%
      transform translateX(-50%)
      width 950px
      height 196px
      background url('./bottom.jpg')
  .content
    position relative
    z-index 10
    width 100%
    height 100%
    #content
      background-color: rgba(0,0,0,0.3);
      border-radius: 1.5em;
      color: #fefefe;
      overflow: auto;
      position: absolute;
      left: 50%;
      top: 50%;
      width: auto;
      height: auto;
      max-height: 80%;